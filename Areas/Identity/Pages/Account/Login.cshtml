@page
@model LoginModel
@{ ViewData["Title"] = "Entrar no Sistema";}
@{ Layout = "~/Areas/Identity/Pages/_AuthLayout.cshtml";}

    <link href="~/css/all.css" rel="stylesheet" />
<div class="col-md-10 offset-1">
    <div class="login-form-icon">
        <i class="fa fa-user-circle fa-7x" aria-hidden="true"></i>
    </div>
    <form id="account" method="post">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <div class="input-group">
                <div class="input-group-prepend">
                    <div class="input-group-text">
                        <i class="fas fa-envelope"></i>
                    </div>
                </div>
                <input asp-for="Input.Email" class="form-control" autofocus="true" placeholder="digite seu e-mail" />
            </div>
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <div class="input-group">
                <div class="input-group-prepend">
                    <div class="input-group-text">
                        <i class="fas fa-key"></i>
                    </div>
                </div>
                <input asp-for="Input.Password" class="form-control" placeholder="digite sua senha" />
            </div>
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>
        <div class="form-group">
            <div class="checkbox">
                <label asp-for="Input.RememberMe">
                    <input asp-for="Input.RememberMe" />
                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                </label>
            </div>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary btn-block text-white">Entrar</button>
        </div>
    </form>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
